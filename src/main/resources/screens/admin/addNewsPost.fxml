<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mikolajm.project.sportclubui.screenController.adminScreens.AddNewsPostController">
   <children>
      <VBox prefHeight="800.0" prefWidth="500.0">
         <children>
            <Label prefHeight="50.0" prefWidth="214.0" text="Add news post" textAlignment="CENTER">
               <font>
                  <Font size="27.0" />
               </font>
               <VBox.margin>
                  <Insets left="15.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="470.0" spacing="15.0">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Label prefHeight="57.0" prefWidth="124.0" text="Article Title:">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tileField" prefHeight="47.0" prefWidth="312.0" promptText="enter article title here">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
             <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="291.0" spacing="15.0">
                 <VBox.margin>
                     <Insets left="15.0" right="15.0" top="10.0" />
                 </VBox.margin>
                 <children>
                     <Label prefHeight="57.0" prefWidth="122.0" text="location:">
                         <font>
                             <Font size="19.0" />
                         </font>
                     </Label>
                     <ChoiceBox fx:id="locationCheckBox" prefHeight="44.0" prefWidth="121.0">
                         <items>
                             <FXCollections fx:factory="observableArrayList">
                             </FXCollections>
                         </items>
                     </ChoiceBox>
                 </children>
             </HBox>
             <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="470.0" spacing="15.0">
                 <VBox.margin>
                     <Insets left="15.0" right="15.0" top="10.0" />
                 </VBox.margin>
                 <children>
                     <Label prefHeight="57.0" prefWidth="122.0" text="Activity:">
                         <font>
                             <Font size="19.0" />
                         </font>
                     </Label>
                     <ChoiceBox fx:id="activityCheckBox" prefHeight="44.0" prefWidth="121.0">
                         <items>
                             <FXCollections fx:factory="observableArrayList">
                             </FXCollections>
                         </items>
                     </ChoiceBox>
                 </children>
             </HBox>
             <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="470.0" spacing="15.0">
                 <VBox.margin>
                     <Insets left="15.0" right="15.0" top="10.0" />
                 </VBox.margin>
                 <children>
                     <Label prefHeight="57.0" prefWidth="122.0" text="Membership:">
                         <font>
                             <Font size="19.0" />
                         </font>
                     </Label>
                     <ChoiceBox fx:id="membershipCheckBox" prefHeight="44.0" prefWidth="121.0">
                         <items>
                             <FXCollections fx:factory="observableArrayList">
                             </FXCollections>
                         </items>
                     </ChoiceBox>
                 </children>
             </HBox>
            <HBox alignment="CENTER" prefHeight="188.0" prefWidth="500.0" spacing="10.0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="addImageBtn" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="87.0" prefWidth="125.0" text="add post image" wrapText="true">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <ImageView fx:id="imageView" fitHeight="164.0" fitWidth="193.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <TextArea fx:id="contentArea" prefHeight="230.0" prefWidth="470.0" promptText="enter article content here" wrapText="true">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="500.0">
               <children>
                  <Button fx:id="submitBtn" alignment="CENTER" mnemonicParsing="false" prefHeight="57.0" prefWidth="214.0" text="Submit news post">
                     <font>
                        <Font size="21.0" />
                     </font></Button>
               </children>
            </HBox>
         </children></VBox>
   </children>
</AnchorPane>
