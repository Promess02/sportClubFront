<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mikolajm.project.sportclubui.screenController.generalScreens.NewsPostController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" prefHeight="400.0" prefWidth="180.0" vgap="10.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="180.0">
                     <children>
                        <TextArea fx:id="articleName" maxHeight="80.0" maxWidth="170" text="Article Name" wrapText="true">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextArea>
                         <Label fx:id="postDate" contentDisplay="CENTER" text="dateOfPosting">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                         </Label>
                        <ImageView fx:id="articleImage" fitHeight="130.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></ImageView>
                        <Button fx:id="locationBtn" mnemonicParsing="false" text="Location">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Button>
                         <Button fx:id="membershipBtn" mnemonicParsing="false" text="Membership">
                             <VBox.margin>
                                 <Insets top="10.0" />
                             </VBox.margin>
                             <font>
                                 <Font size="16.0" />
                             </font>
                         </Button>
                         <Button fx:id="activityBtn" mnemonicParsing="false" text="Activity">
                             <VBox.margin>
                                 <Insets top="10.0" />
                             </VBox.margin>
                             <font>
                                 <Font size="16.0" />
                             </font>
                         </Button>
                     </children>
                     <opaqueInsets>
                        <Insets top="10.0" />
                     </opaqueInsets>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="400.0" prefWidth="420.0">
               <children>
                  <TextArea fx:id="articleContent" prefHeight="373.0" prefWidth="388.0" text="ArticleContent" wrapText="true" />
               </children></FlowPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
