<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mikolajm.project.sportclubui.screenController.generalScreens.MailWindow">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="500.0" spacing="10.0">
         <children>
            <HBox prefHeight="54.0" prefWidth="480.0">
               <children>
                  <Label prefHeight="53.0" prefWidth="105.0" text="Title:">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
                  <TextField fx:id="titleField" prefHeight="53.0" prefWidth="368.0" promptText="enter mail title here" />
               </children>
            </HBox>
            <Label prefHeight="50.0" prefWidth="98.0" text="Content:">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <TextArea fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" promptText="enter email content here" wrapText="true" />
            <Button fx:id="submitBtn" mnemonicParsing="false" prefHeight="46.0" prefWidth="135.0" text="send">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
