<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="fullView" prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mikolajm.project.sportclubui.screenController.TeamView">
   <children>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="350.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="149.0" prefWidth="350.0">
               <children>
                  <Label fx:id="teamName" alignment="CENTER" contentDisplay="CENTER" prefHeight="74.0" prefWidth="151.0" text="TeamName" wrapText="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="imageView" fitHeight="134.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="96.0" prefWidth="350.0" spacing="15.0">
               <children>
                  <Label fx:id="membersLimit" alignment="CENTER" prefHeight="42.0" prefWidth="159.0" text="curMembers/max" wrapText="true">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label fx:id="sportLabel" alignment="CENTER" prefHeight="34.0" prefWidth="160.0" text="Sport">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="viewTrainersBtn" mnemonicParsing="false" prefHeight="36.0" prefWidth="146.0" text="View Trainers">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
