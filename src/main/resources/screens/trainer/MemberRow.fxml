<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="fullView" prefHeight="180.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mikolajm.project.sportclubui.screenController.userScreens.MemberRowController">
   <children>
      <HBox alignment="CENTER" prefHeight="180.0" prefWidth="450.0" spacing="15.0">
         <children>
            <VBox alignment="CENTER" prefHeight="180.0" prefWidth="160.0">
               <children>
                  <Label fx:id="nameField" prefHeight="43.0" prefWidth="123.0" text="member name" />
                  <Label fx:id="surnameField" layoutX="10.0" layoutY="10.0" prefHeight="63.0" prefWidth="101.0" text="member Surname" wrapText="true" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="180.0" prefWidth="198.0" spacing="15.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="58.0" prefWidth="148.0">
                     <children>
                        <Label alignment="TOP_LEFT" prefHeight="47.0" prefWidth="78.0" text="email:" />
                        <Label fx:id="emailField" alignment="TOP_CENTER" prefHeight="53.0" prefWidth="139.0" text="memberEmail" textAlignment="CENTER" wrapText="true" />
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="101.0" prefHeight="64.0" prefWidth="198.0">
                     <children>
                        <Label alignment="TOP_CENTER" prefHeight="47.0" prefWidth="90.0" text="phone number:" wrapText="true" />
                        <Label fx:id="phoneNumberField" alignment="TOP_CENTER" prefHeight="26.0" prefWidth="123.0" text="353 232 252" textAlignment="CENTER" wrapText="true" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <ImageView fx:id="memberImage" fitHeight="132.0" fitWidth="143.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
   </children>
</AnchorPane>
