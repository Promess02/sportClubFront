<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="fullView" prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mikolajm.project.sportclubui.screenController.generalScreens.TrainerProfileController">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="8.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="149.0" prefWidth="350.0">
                    <children>
                  <VBox alignment="CENTER" prefHeight="149.0" prefWidth="176.0">
                     <children>
                        <Label fx:id="trainerName" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="164.0" text="TrainerName">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                         <Label fx:id="trainerSurname" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="166.0" text="TrainerSurname">
                             <font>
                                 <Font size="16.0" />
                             </font>
                         </Label>
                         <Label fx:id="email" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="156.0" text="email">
                             <font>
                                 <Font size="15.0" />
                             </font>
                         </Label>
                         <Label fx:id="grade" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="156.0" text="grade">
                             <font>
                                 <Font size="15.0" />
                             </font>
                         </Label>
                     </children>
                  </VBox>
                        <ImageView fx:id="imageView" fitHeight="134.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin></ImageView>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="96.0" prefWidth="350.0" spacing="15.0">
                    <children>
                        <Label fx:id="specializationLabel" alignment="CENTER" prefHeight="34.0" prefWidth="160.0" text="Specialization">
                            <font>
                                <Font size="23.0" />
                            </font>
                        </Label>
                  <Button fx:id="viewTeamsBtn" mnemonicParsing="false" text="View team" wrapText="true">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Button>

                    </children>
                </HBox>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="350.0" spacing="15.0">
               <children>
                      <ChoiceBox fx:id="starRatingChoiceBox" prefHeight="44.0" prefWidth="121.0">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                              </FXCollections>
                          </items>
                  </ChoiceBox>
                  <Button fx:id="saveGradeBtn" mnemonicParsing="false" prefHeight="43.0" prefWidth="91.0" text="Save Grade" />
               </children>
            </HBox>
            <Button fx:id="sendEmailBtn" mnemonicParsing="false" prefHeight="43.0" prefWidth="102.0" text="send email" />
            </children>
        </VBox>
    </children>
</AnchorPane>
